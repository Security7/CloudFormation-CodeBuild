"CodeBuildForCloudflaretoSumoLogicCloudFormation": {
            "Type" : "AWS::CodeBuild::Project",
            "DependsOn": ["RoleCodeBuildForCloudflaretoSumoLogicCloudFormation"],
            "Properties" : {
                "Name" : { "Fn::Join": ["", ["Cloudflare-to-SumoLogic-CloudFormation", "-", { "Ref": "AWS::StackName"}]]},
                "Description" : "Keep a fresh copy of the Igniter in S3.",
                "Source" : {
                  "Auth" : {
                      "Type" : "OAUTH"
                    },
                  "GitCloneDepth" : 1,
                  "Location" : "https://github.com/Security7/Cloudflare-to-SumoLogic-CloudFormation",
                  "Type" : "GITHUB",
                },
                "TimeoutInMinutes" : 60,
                "Artifacts" : {
                    "Type": "no_artifacts"
                },
                "Environment" : {
                    "Type": "LINUX_CONTAINER",
                    "ComputeType": "BUILD_GENERAL1_SMALL",
                    "Image": "aws/codebuild/nodejs:8.11.0",
                    "EnvironmentVariables" : [
                        {"Name" : "stage", "Type" : "PLAINTEXT", "Value" : { "Ref": "Environment" } }
                    ]
              },
                "ServiceRole" : { "Fn::GetAtt" : ["RoleCodeBuildForCloudflaretoSumoLogicCloudFormation", "Arn"] },
                "Triggers" : {
                    "Webhook" : true
                }
            }
        },

        "RoleCodeBuildForCloudflaretoSumoLogicCloudFormation": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {"Fn::Join": ["", [ "CodeBuild", "-", "For", "-", "Cloudflare-to-SumoLogic-CloudFormation", "-", { "Ref": "AWS::StackName"} ]]},
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "codebuild.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonS3FullAccess"
                ]
            }
        },